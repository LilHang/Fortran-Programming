{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "gfortran",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\f_${fileBasenameNoExtension}.exe",
                "-g",
                "-Wall",
                "-static-libgcc",
                //"-std=f95"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}